{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "ARM Template for Azure Monitor Alerts for Critical Resources"
  },
  "parameters": {
    "actionGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Action Group for alert notifications"
      }
    },
    "actionGroupShortName": {
      "type": "string",
      "maxLength": 12,
      "metadata": {
        "description": "Short name for the Action Group (max 12 characters)"
      }
    },
    "emailAddress": {
      "type": "string",
      "metadata": {
        "description": "Email address for alert notifications"
      }
    },
    "webhookUri": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Optional webhook URI for alert notifications (e.g., Teams, Slack, custom endpoint)"
      }
    },
    "enableWebhook": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable webhook notifications"
      }
    },
    "appServiceId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the App Service to monitor"
      }
    },
    "appServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service"
      }
    },
    "cosmosAccountId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the Cosmos DB Account to monitor"
      }
    },
    "cosmosAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Cosmos DB Account"
      }
    },
    "cosmosDatabaseName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Cosmos DB Database"
      }
    },
    "storageAccountId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the Storage Account to monitor"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Storage Account"
      }
    },
    "functionAppId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the Function App to monitor"
      }
    },
    "functionAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Function App"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resources"
      }
    }
  },
  "variables": {
    "cosmosAccountResourceId": "[parameters('cosmosAccountId')]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/actionGroups",
      "apiVersion": "2023-01-01",
      "name": "[parameters('actionGroupName')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[parameters('actionGroupShortName')]",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "EmailOpsTeam",
            "emailAddress": "[parameters('emailAddress')]",
            "useCommonAlertSchema": true
          }
        ],
        "webhookReceivers": "[if(parameters('enableWebhook'), createArray(createObject('name', 'WebhookReceiver', 'serviceUri', parameters('webhookUri'), 'useCommonAlertSchema', true())), createArray())]"
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appServiceName'), '-high-cpu')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when App Service CPU percentage is high",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[parameters('appServiceId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "CPU Percentage",
              "metricName": "CpuPercentage",
              "metricNamespace": "Microsoft.Web/sites",
              "operator": "GreaterThan",
              "threshold": 80,
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appServiceName'), '-high-memory')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when App Service memory percentage is high",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[parameters('appServiceId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Memory Percentage",
              "metricName": "MemoryPercentage",
              "metricNamespace": "Microsoft.Web/sites",
              "operator": "GreaterThan",
              "threshold": 80,
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appServiceName'), '-http-errors')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when App Service has high HTTP 5xx errors",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[parameters('appServiceId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "HTTP Server Errors",
              "metricName": "Http5xx",
              "metricNamespace": "Microsoft.Web/sites",
              "operator": "GreaterThan",
              "threshold": 10,
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('cosmosAccountName'), '-high-ru')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when Cosmos DB Request Units consumption is high",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[variables('cosmosAccountResourceId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Total Request Units",
              "metricName": "TotalRequestUnits",
              "metricNamespace": "Microsoft.DocumentDB/databaseAccounts",
              "operator": "GreaterThan",
              "threshold": 10000,
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('cosmosAccountName'), '-throttled-requests')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when Cosmos DB requests are throttled (429 errors)",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[variables('cosmosAccountResourceId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Throttled Requests",
              "metricName": "TotalRequests",
              "metricNamespace": "Microsoft.DocumentDB/databaseAccounts",
              "dimensions": [
                {
                  "name": "StatusCode",
                  "operator": "Include",
                  "values": ["429"]
                }
              ],
              "operator": "GreaterThan",
              "threshold": 0,
              "timeAggregation": "Count",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('storageAccountName'), '-availability')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when Storage Account availability is low",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[parameters('storageAccountId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Availability",
              "metricName": "Availability",
              "metricNamespace": "Microsoft.Storage/storageAccounts",
              "operator": "LessThan",
              "threshold": 99,
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('functionAppName'), '-errors')]",
      "location": "Global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
      ],
      "properties": {
        "description": "Alert when Function App has high error rate",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[parameters('functionAppId')]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "Function Errors",
              "metricName": "FunctionExecutionCount",
              "metricNamespace": "Microsoft.Web/sites",
              "operator": "GreaterThan",
              "threshold": 5,
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion",
              "dimensions": [
                {
                  "name": "status",
                  "operator": "Include",
                  "values": ["Failed"]
                }
              ]
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
          }
        ]
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {
    "actionGroupId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]",
      "metadata": {
        "description": "Resource ID of the Action Group"
      }
    },
    "actionGroupName": {
      "type": "string",
      "value": "[parameters('actionGroupName')]",
      "metadata": {
        "description": "Name of the Action Group"
      }
    }
  }
}

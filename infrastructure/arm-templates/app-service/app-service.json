{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "ARM Template for Azure App Service (Web App) with App Service Plan"
  },
  "parameters": {
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "appServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service (Web App)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "Development",
        "Staging",
        "Production"
      ],
      "metadata": {
        "description": "Environment name"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1v2",
        "P2v2",
        "P3v2"
      ],
      "metadata": {
        "description": "App Service Plan SKU"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 10,
      "metadata": {
        "description": "Number of instances for the App Service Plan"
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "DOTNETCORE|8.0",
      "metadata": {
        "description": "Runtime stack for Linux App Service"
      }
    },
    "alwaysOn": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable Always On feature"
      }
    },
    "httpsOnly": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Require HTTPS only"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resources"
      }
    }
  },
  "variables": {
    "appServicePlanResourceId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServiceName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('appServicePlanResourceId')]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[variables('appServicePlanResourceId')]",
        "httpsOnly": "[parameters('httpsOnly')]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "alwaysOn": "[parameters('alwaysOn')]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "http20Enabled": true,
          "appSettings": [
            {
              "name": "ENVIRONMENT",
              "value": "[parameters('environment')]"
            }
          ]
        }
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {
    "appServicePlanId": {
      "type": "string",
      "value": "[variables('appServicePlanResourceId')]",
      "metadata": {
        "description": "Resource ID of the App Service Plan"
      }
    },
    "appServiceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]",
      "metadata": {
        "description": "Resource ID of the App Service"
      }
    },
    "appServiceDefaultHostName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appServiceName'))).defaultHostName]",
      "metadata": {
        "description": "Default hostname of the App Service"
      }
    },
    "appServicePrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appServiceName')), '2022-03-01', 'Full').identity.principalId]",
      "metadata": {
        "description": "Principal ID of the App Service managed identity"
      }
    }
  }
}
